<%-include ('../partials/header.ejs');%>
<%-include ('../partials/main_nav.ejs');%>

<!--content for the Add page-->

<div class="innerdiv">

<div class = "container">
    <div class = "row">
        <div class ="offset-md-3 col-md-6">
        <h1><%= title %></h1>
        <form class = "form" method="POST">

            <div class ="form group">
                <label for="nameTextField">Contact Name</label>
                <input type="text" class="form control"
                id="nameTextField"
                placeholder="Enter the contact's Name"
                name="name" required>
            </div>

            <div class ="form group">
                <label for="numberTextField">Number</label>
                <input type="text" class="form control"
                id="numberTextField"
                placeholder="Enter the contact's Number"
                name="numberTextField" required>
            </div>

            <div class ="form group">
                <label for="emailTextField">Email</label>
                <input type="text" class="form control"
                id="emailTextField"
                placeholder="Enter the contact's email address"
                name="emailTextField" required>
            </div>

            <button class = "btn btn-primary" type="submit"><i class ="fas fa-edit"></i>submit</button>
            <a href='/contactList' class="btn btn-warning"><i class="fas fa-undo"></i>cancel</a>  
        
        </form>
        </div>
        </div>
    </div>

</div>
  
<%- include('../partials/bottom_nav'); -%>
